@{
    ViewData["Title"] = "Calculator";
    ViewData["TabPic"] = "img/recordercliff.JPG";
}

<div>
    <h2>GRADE CALCULATOR</h2>
    <h4>Input grade percentages for each of the following categories:</h4><br />
    <form>
        <label>Assignments:</label>
        <input id="assign" /><br /><br />
        <label>Group Project:</label>
        <input id="group" /><br /><br />
        <label>Quizzes:</label>
        <input id="quiz" /><br /><br />
        <label>Midterm Exam:</label>
        <input id="midterm" /><br /><br />
        <label>Final Exam:</label>
        <input id="final" /><br /><br />
        <label>INTEX:</label>
        <input id="intex" /><br /><br />
        <input id="btnCalculate" type="button" value="Calculate Grade!" /><br /><br /><br />
    </form>
</div>

<div>
    <h1>RESULTS:</h1>
    <h3 id="output"></h3>
    <br /><br />
</div>

